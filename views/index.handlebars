<div class="jumbotron text-center">
  <img src="../assets/img/eatdaburger.png" alt="burger">
</div>

<div class="wrapper">
    <div class="container">
        <div class="row">
            <h2>Add Burger:</h2>
        </div>

        <div class="row">
            <form class="add-form">
                <input class="form-control" type="text" id="burger" placeholder="Enter Burger Name">
                <br>
                <button type="submit" class="btn btn-primary" id="add-burger">Add Burger</button>
            </form>
        </div>

        <br>
        <hr>
        <br>

        <div class="row">
            <h2>Wish List: </h2>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-list devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <br>
        <hr>
        <br>

        <div class="row">
            <h2>   Devoured: </h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-eaten}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>

        <footer>
            <hr>
            <br>
            Copyright: Eat-Da-Burger, LLC
            <br>
            <br>
        </footer>

    </div>
</div>

